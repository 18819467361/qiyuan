<!--pages/main/index.wxml-->
<view class='wrapper'>
  <view class='title'>祈愿基金</view>
  <view>
    <view>
      <text>总金额：{{total}}</text>
      <picker bindchange="addTotal" mode="selector" range="{{moneyList}}">加一笔！</picker>
    </view>
    <view>动态图表显示</view>
  </view>
  <view>余额：{{balance}}</view>
  <scroll-view scroll-y='true' class='scrollDetail'>
    <view wx:for="{{spendList}}" wx:key='index'>
      <item-list item="{{item}}" bindtap="costDetailPage"></item-list>
    </view>
  </scroll-view>
  <button class='setBtn' type="primary" size="{{defaultSize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="goSetSpendItem" hover-class="other-button-hover"> 添加一项报销 </button>
</view>
